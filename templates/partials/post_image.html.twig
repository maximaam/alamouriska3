{% set width = post.imageWidth %}
{% set height = post.imageHeight %}

{% if is_mobile(app.request.headers) is same as(true) %}
    {% set width = width/2 %}
    {% set height = height/2 %}
{% endif %}

<img class="d-block mx-auto mw-100 mh-100" src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="{{ post.slug }}">