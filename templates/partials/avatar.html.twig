{% set size = size|default(32) %}
{% set avatar = asset('images/avatars/default-avatar_'~size~'x'~size~'.webp') %}
{% set current_user = current_user|default(app.user) %}

{% if current_user.avatar is not null %}
    {% set avatar = asset(current_user.avatar.name, 'avatar')|imagine_filter('avatar_'~size) %}
{% endif %}

<img class="rounded-circle shadow-sm border border-1 border-light" src="{{ avatar }}" alt="" width="{{ size }}" height="{{ size }}">