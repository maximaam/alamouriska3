{% extends 'layer_center.html.twig' %}

{% block title %}
    {{ 'label.login'|trans }}
    {{ parent() }}
{% endblock %}

{% block card_header %}
    <h1 class="text-center">{{ 'label.login'|trans }}</h1>
{% endblock %}

{% block card_body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form method="post">
        <div class="mb-3">
            <label for="input-email">{{ 'label.email_address'|trans }}</label>
            <input type="text" value="{{ last_username }}" name="email" placeholder="{{ 'label.email_address'|trans }}" id="input-email" class="form-control" required autofocus>
        </div>
        <div class="mb-3">
            <label for="input-password">{{ 'label.password'|trans }}</label>
            <input type="password" name="password" placeholder="{{ 'label.password'|trans }}" id="input-password" class="form-control" required>
            <div id="emailHelp" class="form-text">
                <a href="{{ path('app_forgot_password_request') }}">{{ 'label.forgot_password'|trans }}</a> |
                <a href="{{ path('app_register') }}">{{ 'label.no_account'|trans }}</a>
            </div>
        </div>
        <div class="text-end">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-lg btn-primary" type="submit">{{ 'label.login'|trans }}</button>
        </div>
    </form>
{% endblock %}

{% block card_footer %}
    {{ include('partials/fb-login.html.twig', { 'label': 'label.login_facebook' | trans }) }}
{% endblock %}